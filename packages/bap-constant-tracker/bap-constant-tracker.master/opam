build: [
  ["./configure" "--prefix=%{prefix}%" "--enable-constant-tracker"]
  [make]
]

install: [[make "install"]]

remove: [["ocamlfind" "remove" "bap-plugin-costant_tracker"]
         ["bapbundle" "remove" "constant_tracker.plugin"]]

depends: [
  "ocaml" {>= "4.04.1" & < "4.08.0"}
  "bap-std" {= "master"}
  "bap-primus" {= "master"}
]
