opam-version: "2.0"
name: "bap-objdump"
version: "master"
maintainer: "Ivan Gotovchits <ivg@ieee.org>"
authors: "BAP Team"
homepage: "https://github.com/BinaryAnalysisPlatform/bap/"
bug-reports: "https://github.com/BinaryAnalysisPlatform/bap/issues"
dev-repo: "git://github.com/BinaryAnalysisPlatform/bap/"
license: "MIT"
build: [
  ["./configure" "--prefix=%{prefix}%"
                 "--enable-objdump"
                 "--objdump-targets=%{conf-binutils:targets}%"
                 "--objdump-path=%{conf-binutils:objdump}%"
                 ]
  [make]
]
install: [[make "install"]]
remove: [["ocamlfind" "remove" "bap-plugin-objdump"]
	 ["bapbundle" "remove" "objdump.plugin"]
]
depends: [
  "ocaml" {>= "4.04.1" & < "4.08.0"}
  "bap-std" {= "master"}
  "re"
  "cmdliner"
  "conf-binutils"
]
synopsis: "Extract symbols from binary, using binutils objdump"
url {
  src: "git+https://github.com/BinaryAnalysisPlatform/bap#aefa92bb6621208d708102be17753374e562f3cc"
}
